<header>
  <div id="search">
    <% #Search Container which holds search bar and advanced search %>
    <div class="search-container">
        <form action="" method="post">
          <input type="text" class="field" value="Keywords" title="Keywords" />
          <input type="submit" value="" class="submit-button" />
        </form>
      <a class="advanced-search" title="Advanced Search" href="#">Advanced Search</a>
      <div style="clear:both"></div>
    </div>
  </div>
  <div style="clear:both"></div>

  <% #Site Logo %>
  <h1 id="logo"><a title="Home" href="/">ShopOO</a></h1>

  <% #Account options such as My Account, Shopping Cart, and Checkout%>
  <div id="account-options">
    <ul>
      <% if signed_in? %>
          <li><%= "#{pluralize(current_user.cart.items.count, "item")} in cart" %></li>
      <% else %>
          <li>Not signed in</li>
      <% end %>
      <% if signed_in? %>
        <li><%= link_to profile_path(current_user), :class => "account round" do %><span></span>My Account<% end %></li>
      <% else %>
        <li><%= link_to signin_path, :class => "signin round" do %><span></span>Sign in<% end %></li>
      <% end %>
      <% if signed_in? %>
          <li><%= link_to signout_path, :class => "signout round" do %><span></span>Sign out<% end %></li>
      <% end %>
      <li><%= link_to "/cart", :class => "cart round" do %><span></span>Shopping Cart<% end %></li>
      <li><%= link_to "/checkout", :class => "checkout round" do %><span></span>Checkout<% end %></li>
    </ul>
  </div>
  <div style="clear:both"></div>
</header>