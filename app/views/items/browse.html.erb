<%= will_paginate %>
<div class="items">
  <% @items.each do |item| %>
      <div class="item-container">
        <div class="item">
          <%=link_to( image_tag( item.url ), view_path(item.name, item.id)) %>
          <p><%= item.name %></p>
          <p><span class="price"><%= "$#{item.cost}"%></span>
            <% if signed_in? %>
                <%= link_to "Add to Cart", :controller => "users", :action => "add_item", :id => item.id, :quantity => 1 %>
                <% if current_user.admin? %>
                   <%= link_to "Edit", :controller => "items", :action => "edit", :id => item.id %>
                <% end %>
            <% end %>
          </p>
        </div>
      </div>
  <% end %>
</div>
<br class="clear"/>
<%= will_paginate %>
