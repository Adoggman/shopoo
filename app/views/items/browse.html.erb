<div style="text-align: center">
<h1>Items#browse</h1>
<p>Find me in app/views/items/browse.html.erb</p>
<% @items.each do |item| %>
    <div style="border-style: groove; border-width: 5px; text-align: center; width: 300px; margin-left:auto; margin-right:auto">
        <p><%= "Item Name: #{item.name}" %></p>
        <p><%= "Item Description: #{item.description}" %></p>
        <p><%= "Item Cost: #{item.cost}" %></p>
        <p><%= "Item Url: #{item.url}" %></p>
        <%= link_to "Edit", :controller => "items", :action => "edit", :id => item.id %>
    </div>
</div>
<% end %>
