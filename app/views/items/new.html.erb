<div style="text-align: center">
<h1>Items#new</h1>
<p>Find me in app/views/items/new.html.erb</p>
<%= form_for @item do |f| %>
    <%= f.label :name %>:
    <%= f.text_field :name %><br />

    <%= f.label :category %>:
    <%= f.text_field :category %><br />

    <%= f.label :description %>:
    <%= f.text_field :description %><br />

    <%= f.label :cost %>:
    <%= f.text_field :cost %><br />

    <%= f.label :stock %>:
    <%= f.text_field :stock %><br />

    <%= f.label :url %>:
    <%= f.text_field :url %><br />

    <%= f.submit "Submit" %>
</div>
<% end %>