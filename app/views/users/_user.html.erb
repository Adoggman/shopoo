<li>
  <%= gravatar_for user %>
  <%= link_to "#{user.firstname} #{user.lastname}", profile_path(user) %>
  <% if current_user.admin? %>
    | <%= link_to "delete", user, :method => :delete, :confirm => "Are you sure?",
                                :title => "Delete #{user.firstname} #{user.lastname}" %>
  <% end %>
</li>