<div style="text-align: center">
  <h1>View Orders</h1>
</div>

<% @orders.each do |order| %>
    <p style="font-size:x-large">Total: <span style="color:red"><%= "$#{number_with_precision(order.get_total, :precision => 2)}" %></span></p>
    <p style="font-size:x-large; margin-top:-30px">Date Ordered: <span style="color:red"><%= order.order_date %></span><br/></p>
  <div class="items">
    <% order.items.each do |item| %>
      <div class="item-container">
        <div class="item centered">
          <%=link_to( image_tag( item.url ), "#") %>
          <%= item.name %>
          <br/>
          <%= "Quantity: #{order.get_item_quantity(item.id)}" %>
          <br/>
          <p><span class="price"><%= "Unit Price: $#{item.cost}"%></span>
        </div>
      </div>
    <% end %>
    <br class="clear"/>
</div>
<% end %>
<%= will_paginate @orders %>





