<%= render 'layouts/slider' %>
<header class="featured">Featured Items</header>
<div class="items">
  <% @items.each do |item| %>
    <div class="item-container">
      <div class="item">
        <%=link_to( image_tag( item.url ), "#") %>
        <p><%= item.name %></p>
        <p><span class="price"><%= "$#{item.cost}"%></span></p>
      </div>
    </div>
  <% end %>
</div>
